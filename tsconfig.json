{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "lib": ["esnext"],
    "types": ["jest", "node", "@appsemble/node-utils"],
    "target": "es2018"
  },
  "exclude": ["blocks/*", "packages/*"]
}
